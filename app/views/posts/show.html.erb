<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @post.tags %>
</p>

<div class="comments_block">
  <h2>Комментарии:</h2>
  <%= render @post.comments %>
</div>
<h2>Добавить комментарий:</h2>
<%= render 'comments/form' %>

<%= link_to 'Редактировать', edit_post_path(@post) %> |
<%= link_to 'Назад', posts_path %>
